  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["api.app.main:app", "--reload"],
      "jinja": true
    },
    {
      "name": "FastAPI (Logging: DEBUG)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["api.app.main:app", "--reload"],
      "jinja": true,
      "env": {
        "LOG_LEVEL": "DEBUG"
      },
      "justMyCode": false
    }
  ]
}
